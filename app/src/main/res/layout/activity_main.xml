<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sjl.wallpaper.MainActivity">

    <Button
        android:id="@+id/btnChooseWallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择壁纸" />
    <Button
        android:id="@+id/btnChooseLiveWallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择动态壁纸" />
    <Button
        android:id="@+id/btnVideoWallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择视频壁纸" />
    <Button
        android:id="@+id/btnCameraWallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择相机壁纸" />

</LinearLayout>
